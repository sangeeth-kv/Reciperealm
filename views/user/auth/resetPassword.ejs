
<section class="d-flex align-items-center justify-content-center min-vh-100"
    style="background: url('/assets/imgs/1699665481614.jpg') no-repeat center center fixed; background-size: cover;">
    <div class="container">
        <div class="row align-items-center justify-content-center">

            <!-- Password Reset Form -->
            <div class="col-lg-6">
                <div class="p-5 bg-white rounded shadow-sm">
                    <div class="mb-4 text-center">
                        <h3 class="fw-bold">Reset Your Password</h3>
                        <p class="text-muted">Enter your new password below</p>
                    </div>

                    <form id="reset-password-form" method="POST">
                        <div class="mb-3 position-relative">
                            <input type="password" name="newPassword" id="newPassword" class="form-control"
                                placeholder="New Password">
                            <i class="fa fa-eye position-absolute top-50 end-0 translate-middle-y me-3"
                                id="toggleNewPassword" style="cursor:pointer;"></i>
                            <div id="passwordError" class="error-message" style="color: red;"></div>
                        </div>

                        <div class="mb-3 position-relative">
                            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"
                                placeholder="Confirm Password">
                            <i class="fa fa-eye position-absolute top-50 end-0 translate-middle-y me-3"
                                id="toggleConfirmPassword" style="cursor:pointer;"></i>
                            <div id="confirmPasswordError" class="error-message" style="color: red;"></div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">Reset Password</button>
                    </form>

                    <div class="text-center mt-3">
                        <p class="mb-0 small">Remember your password?
                            <a href="/accounts/login" class="text-decoration-none fw-bold">Login</a>
                        </p>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
<script src="/scripts/resetPassword.js"></script>
