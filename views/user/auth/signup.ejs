<section class="d-flex align-items-center justify-content-center min-vh-100" style="background: url('/assets/imgs/1699665481614.jpg') no-repeat center center fixed; background-size: cover;">
  <div class="container">
    <div class="row align-items-center justify-content-center">

      <!-- Right Side - Signup Form -->
      <div class="col-lg-6">
        <div class="p-5 bg-white rounded shadow-sm">
          <div class="mb-4 text-center">
            <h3 class="fw-bold">Create Your Account</h3>
            <p class="text-muted">Sign up to get started</p>
          </div>

          <form id="signupForm" method="post">
            <div class="mb-3">
              <input type="text" name="fullname" id="fullname" class="form-control" placeholder="Full Name" >
              <div id="fullnameError" class="error-message" style="color: red;"></div>
            </div>
            <div class="mb-3">
              <input type="email" name="email" id="email" class="form-control" placeholder="Email" >
               <div id="emailError" class="error-message" style="color: red;"></div>
            </div>
            <div class="mb-3">
              <input type="tel" name="phone" id="phone" class="form-control" placeholder="Phone Number" >
              <div id="phoneError" class="error-message" style="color: red;"></div>
            </div>
            <div class="mb-3">
              <input type="password" name="password" id="password" class="form-control" placeholder="Password" >
               <div id="passwordError" class="error-message" style="color: red;"></div>
            </div>
            <div class="mb-3">
              <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm Password" >
               <div id="confirmPasswordError" class="error-message" style="color: red;"></div>
            </div>
            <button id="submitBtn" type="submit" class="btn btn-primary w-100">Sign Up</button>
          </form>

          <!-- Already have account -->
          <div class="text-center mt-3">
            <p class="mb-0 small">Already have an account?
              <a href="/login" class="text-decoration-none fw-bold">Log in</a>
            </p>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
</body>
<script src="/scripts/signupJs.js"></script>
